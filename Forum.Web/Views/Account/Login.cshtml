@model Forum.Web.Models.Account.LoginModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@if (ViewBag.error != null)
{
    <div class="alert alert-danger">
        @ViewBag.error
    </div>
}
<form method="post" action="@Url.Action("Login","Account")">
    <div class="form-group">
        <label for="nickname">Nickname: </label>
        @Html.TextBoxFor(m => m.Nickname, new { @class = "form-control", @id = "nickname", @placeholder = "nick name" })
        <small>@Html.ValidationMessageFor(m => m.Nickname)</small>
    </div>
    <div class="form-group">
        <label for="password">Password: </label>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "password" })
        <small>@Html.ValidationMessageFor(m => m.Password)</small>
    </div>
    <div class="form-group">
        <label for="remember">Remember Me </label>
        @Html.CheckBoxFor(m => m.RememberMe, new { @id = "remember" })
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>
